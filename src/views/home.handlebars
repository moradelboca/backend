{{#if showingDocs.length}}
  <div>
    <p>No hay productos!</p>
  </div>
{{else}}
  <div>
    <p>Se muestran {{showingDocs}} de un total de {{totalDocs}} productos</p>
    <ul>
      {{#each docs}}
        <li>
          <p>{{this.title}}: ${{this.price}}</p>
        </li>
      {{/each}} 
    </ul>
  </div>
{{/if}}
